{
  "mongodb": {
    "connectionString": "mongodb://localhost:27017",
    "databaseName": "obsidian_mcp",
    "collections": {
      "notes": "notes",
      "metadata": "metadata",
      "searchIndex": "search_index",
      "tags": "tags",
      "links": "links"
    },
    "options": {
      "maxPoolSize": 10,
      "serverSelectionTimeoutMS": 5000,
      "socketTimeoutMS": 45000,
      "bufferMaxEntries": 0,
      "autoReconnect": true,
      "keepAlive": true,
      "keepAliveInitialDelay": 300000
    },
    "indexes": {
      "notes": [
        {
          "keys": { "obsidianId": 1 },
          "options": { "unique": true }
        },
        {
          "keys": { "title": "text", "content": "text", "searchableText": "text" },
          "options": { "name": "text_search" }
        },
        {
          "keys": { "tags": 1 },
          "options": { "name": "tags_index" }
        },
        {
          "keys": { "lastSync": -1 },
          "options": { "name": "last_sync_index" }
        }
      ],
      "searchIndex": [
        {
          "keys": { "noteId": 1 },
          "options": { "unique": true }
        },
        {
          "keys": { "searchTerms": 1 },
          "options": { "name": "search_terms_index" }
        }
      ]
    }
  },
  "obsidian": {
    "vaultPath": "/Users/gukho/Library/Mobile Documents/iCloud~md~obsidian/Documents/My Card"
  }
} 